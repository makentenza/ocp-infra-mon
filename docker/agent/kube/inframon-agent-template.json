{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "inframon-agent"
    },
    "objects": [
        {
            "apiVersion": "v1",
            "kind": "ImageStream",
            "metadata": {
                "annotations": {
                    "description": "Keeps track of changes in the application image"
                },
                "name": "${NAME}"
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "annotations": {
                    "description": "Defines how to build the application"
                },
                "name": "${NAME}"
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "runPolicy": "Serial",
                "completionDeadlineSeconds": "1800",
                "source": {
                    "contextDir": "docker/agent/",
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/makentenza/ocp-infra-mon.git"
                    }
                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                        "from": {
                            "kind": "DockerImage",
                            "name": "centos:7"
                        }
                    }
                },
                "output": {
                    "to": {
                      "kind": "ImageStreamTag",
                      "name": "${NAME}:latest"
                    }
                }
            }
        },
        {
            "apiVersion": "extensions/v1beta1",
            "kind": "DaemonSet",
            "metadata": {
                "annotations": {
                    "description": "Defines how to deploy the application"
                },
                "name": "${NAME}"
            },
            "spec": {
                "selector": {
                    "matchLabels": {
                        "inframon-agent": "true"
                    }
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "inframon-agent": "true"
                        },
                        "name": "${NAME}"
                    },
                    "spec": {
                        "containers": [
                            {
                                "image": " ",
                                "livenessProbe": {
                                    "tcpSocket": {
                                        "port": 5665
                                    },
                                    "initialDelaySeconds": 30,
                                    "timeoutSeconds": 3
                                },
                                "name": "${NAME}",
                                "securityContext": {
                                  "privileged": true
                                },
                                "volumeMounts": [
                                    {
                                        "mountPath": "/run",
                                        "name": "node-run"
                                    },
                                    {
                                        "mountPath": "/run/lvm",
                                        "name": "node-lvm"
                                    },
                                    {
                                        "mountPath": "/dev",
                                        "name": "node-dev"
                                    },
                                    {
                                        "mountPath": "/sys/fs/cgroup",
                                        "name": "node-cgroup"
                                    },
                                    {
                                        "mountPath": "/etc/nrpe.d",
                                        "name": "nrpe-config"
                                    },
                                    {
                                        "mountPath": "/node/root",
                                        "name": "node-root"
                                    }
                                ],
                                "hostNetwork": true,
                                "nodeSelector": {
                                    "inframon-agent": "true"
                                },
                                "readinessProbe": {
                                    "tcpSocket": {
                                        "port": 5665
                                    },
                                    "initialDelaySeconds": 3,
                                    "timeoutSeconds": 3
                                }
                            }
                        ],
                        "serviceAccount": "inframon",
                        "serviceAccountName": "inframon",
                        "volumes": [
                            {
                                "emptyDir": {},
                                "name": "node-run"
                            },
                            {
                                "name": "nrpe-config",
                                "hostPath": {
                                    "path": "/inframon-agent"
                                }
                            },
                            {
                                "hostPath": {
                                    "path": "/run/lvm"
                                },
                                "name": "node-lvm"
                            },
                            {
                                "hostPath": {
                                    "path": "/dev"
                                },
                                "name": "node-dev"
                            },
                            {
                                "hostPath": {
                                    "path": "/sys/fs/cgroup"
                                },
                                "name": "node-cgroup"
                            },
                            {
                                "hostPath": {
                                    "path": "/"
                                },
                                "name": "node-root"
                            }
                        ]
                    }
                },
                "triggers": [
                    {
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${NAME}"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${NAME}:latest"
                            }
                        },
                        "type": "ImageChange"
                    },
                    {
                        "type": "ConfigChange"
                    }
                ]
            }
        }
    ],
    "parameters": [
        {
            "description": "The name assigned to all of the frontend objects defined in this template.",
            "displayName": "Name",
            "name": "NAME",
            "required": true,
            "value": "inframon-agent"
        },
        {
            "description": "The exposed hostname that will route to the inframon-host service, if left blank a value will be defaulted.",
            "displayName": "Application Hostname",
            "name": "APPLICATION_DOMAIN"
        }
    ]
}
