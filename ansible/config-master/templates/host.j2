object Host "{{ ansible_fqdn }}" {
  address = "{{ ansible_fqdn }}"
  check_command = "hostalive"
  {% if ansible_fqdn in groups['masters'] %}
  vars.master = "true"
  {% else %}
  vars.master = "false"
  {% endif %}
  {% if ansible_fqdn in groups['nodes'] %}
  vars.node = "true"
  {% else %}
  vars.node = "false"
  {% endif %}
  {% if ansible_fqdn in groups['etcd'] %}
  vars.etcd = "true"
  {% else %}
  vars.etcd = "false"
  {% endif %}
  vars.os = "Linux"
  vars.ocp = "true"
}
