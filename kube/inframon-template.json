{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "inframon"
    },
    "objects": [
        {
            "apiVersion": "v1",
            "kind": "ServiceAccount",
            "metadata": {
                "name": "inframon"
            }
        },
        {
           "apiVersion": "v1",
           "kind": "ImageStream",
           "metadata": {
               "name": "inframon-host"
           }
        },
        {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "labels": {
                    "app": "inframon-host"
                },
                "name": "inframon-host"
            },
            "spec": {
                "ports": [
                    {
                        "name": "nrpe",
                        "port": 5665,
                        "protocol": "TCP",
                        "targetPort": 5665
                    },
                    {
                        "name": "web",
                        "port": 80,
                        "protocol": "UDP",
                        "targetPort": 80
                    }
                ],
                "selector": {
                    "app": "inframon-host"
                },
                "sessionAffinity": "None",
                "type": "NodePort"
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "inframon-host"
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "runPolicy": "Serial",
                "source": {
                    "contextDir": "docker/",
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/makentenza/ocp-infra-mon.git"
                    }
                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                        "from": {
                            "kind": "DockerImage",
                            "name": "centos:7"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "inframon-host:latest"
                    }
                },
                "resources": {},
                "postCommit": {},
                "nodeSelector": null
            },
            "status": {
                "lastVersion": 1
            }
        },
        {
            "apiVersion": "v1",
            "kind": "DeploymentConfig",
            "metadata": {
                "name": "inframon-host"
            },
            "spec": {
                "replicas": 1,
                "selector": {
                    "app": "inframon-host"
                },
                "strategy": {
                    "rollingParams": {
                        "intervalSeconds": 1,
                        "maxSurge": "25%",
                        "maxUnavailable": "25%",
                        "timeoutSeconds": 600,
                        "updatePeriodSeconds": 1
                    },
                    "type": "Rolling"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "inframon-host"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "image": "inframon/inframon-host",
                                "imagePullPolicy": "IfNotPresent",
                                "livenessProbe": {
                                    "failureThreshold": 3,
                                    "initialDelaySeconds": 30,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "tcpSocket": {
                                        "port": 80
                                    },
                                    "timeoutSeconds": 5
                                },
                                "name": "inframon-host",
                                "ports": [
                                    {
                                        "containerPort": 80,
                                        "protocol": "TCP"
                                    },
                                    {
                                        "containerPort": 5665,
                                        "protocol": "TCP"
                                    }
                                ],
                                "readinessProbe": {
                                    "failureThreshold": 1,
                                    "initialDelaySeconds": 30,
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "tcpSocket": {
                                        "port": 8082
                                    },
                                    "timeoutSeconds": 5
                                }
                            }
                        ],
                        "dnsPolicy": "ClusterFirst",
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30
                    }
                },
                "test": false,
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ]
            }
        },
        {
            "apiVersion": "v1",
            "kind": "Route",
            "metadata": {
                "labels": {
                    "app": "inframon-host"
                },
                "name": "inframon-host"
            },
            "spec": {
                "port": {
                    "targetPort": "web"
                },
                "to": {
                    "kind": "Service",
                    "name": "inframon-host",
                    "weight": 100
                },
                "wildcardPolicy": "None"
            }
        }
    ]
}
