{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "inframon"
    },
    "objects": [
        {
            "apiVersion": "v1",
            "kind": "ServiceAccount",
            "metadata": {
                "name": "inframon"
            }
        },
        {
            "apiVersion": "v1",
            "kind": "ImageStream",
            "metadata": {
                "annotations": {
                    "description": "Keeps track of changes in the application image"
                },
                "name": "${NAME}"
            }
        },
        {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "annotations": {
                    "description": "Exposes and load balances the application pods"
                },
                "name": "${NAME}"
            },
            "spec": {
                "ports": [
                    {
                        "name": "icingaweb",
                        "port": 80,
                        "targetPort": 80
                    }
                ],
                "selector": {
                    "name": "${NAME}"
                }
            }
        },
        {
            "apiVersion": "v1",
            "kind": "Route",
            "metadata": {
                "name": "${NAME}"
            },
            "spec": {
                "host": "${APPLICATION_DOMAIN}",
                "path": "/icingaweb2",
                "to": {
                    "kind": "Service",
                    "name": "${NAME}"
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "annotations": {
                    "description": "Defines how to build the application"
                },
                "name": "${NAME}"
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "runPolicy": "Serial",
                "completionDeadlineSeconds": "1800",
                "source": {
                    "contextDir": "docker/",
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/makentenza/ocp-infra-mon.git"
                    }
                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                        "from": {
                            "kind": "DockerImage",
                            "name": "centos:7"
                        }
                    }
                },
                "output": {
                    "to": {
                      "kind": "ImageStreamTag",
                      "name": "${NAME}:latest"
                    }
                }
            }
        },
        {
            "apiVersion": "v1",
            "kind": "DeploymentConfig",
            "metadata": {
                "annotations": {
                    "description": "Defines how to deploy the application server"
                },
                "name": "${NAME}"
            },
            "spec": {
                "replicas": 1,
                "selector": {
                    "name": "${NAME}"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "name": "${NAME}"
                        },
                        "name": "${NAME}"
                    },
                    "spec": {
                        "containers": [
                            {
                                "image": " ",
                                "livenessProbe": {
                                    "tcpSocket": {
                                        "port": 80
                                    },
                                    "initialDelaySeconds": 30,
                                    "timeoutSeconds": 3
                                },
                                "name": "${NAME}",
                                "ports": [
                                    {
                                        "containerPort": 80
                                    }
                                ],
                                "securityContext": {
                                  "privileged": true
                                },
                                "volumeMounts": [
                                    {
                                        "mountPath": "/etc/icinga2",
                                        "name": "icinga-data"
                                    },
                                    {
                                        "mountPath": "/etc/icingaweb2",
                                        "name": "icingaweb-data"
                                    },
                                    {
                                        "mountPath": "/var/lib.mysql",
                                        "name": "mysql-data"
                                    },
                                    {
                                        "mountPath": "/run",
                                        "name": "node-run",
                                        "readOnly": true
                                    },
                                    {
                                        "mountPath": "/run/lvm",
                                        "name": "node-lvm",
                                        "readOnly": true
                                    },
                                    {
                                        "mountPath": "/dev",
                                        "name": "node-dev",
                                        "readOnly": true
                                    },
                                    {
                                        "mountPath": "/sys/fs/cgroup",
                                        "name": "node-cgroup",
                                        "readOnly": true
                                    },
                                    {
                                        "mountPath": "/noderoot",
                                        "name": "node-root",
                                        "readOnly": true
                                    }
                                ],
                                "readinessProbe": {
                                    "tcpSocket": {
                                        "port": 80
                                    },
                                    "initialDelaySeconds": 3,
                                    "timeoutSeconds": 3
                                }
                            }
                        ],
                        "serviceAccount": "inframon",
                        "serviceAccountName": "inframon",
                        "volumes": [
                            {
                                "name": "icinga-data",
                                "persistentVolumeClaim": {
                                    "claimName": "${ICINGA_PVC}"
                                }
                            },
                            {
                                "name": "icingaweb-data",
                                "persistentVolumeClaim": {
                                    "claimName": "${ICINGAWEB_PVC}"
                                }
                            },
                            {
                                "name": "mysql-data",
                                "persistentVolumeClaim": {
                                    "claimName": "${MYSQL_PVC}"
                                }
                            },
                            {
                                "emptyDir": {},
                                "name": "node-run"
                            },
                            {
                                "hostPath": {
                                    "path": "/run/lvm"
                                },
                                "name": "node-lvm"
                            },
                            {
                                "hostPath": {
                                    "path": "/dev"
                                },
                                "name": "node-dev"
                            },
                            {
                                "hostPath": {
                                    "path": "/sys/fs/cgroup"
                                },
                                "name": "node-cgroup"
                            },
                            {
                                "hostPath": {
                                    "path": "/"
                                },
                                "name": "node-root"
                            }
                        ]
                    }
                },
                "triggers": [
                    {
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${NAME}"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${NAME}:latest"
                            }
                        },
                        "type": "ImageChange"
                    },
                    {
                        "type": "ConfigChange"
                    }
                ]
            }
        }
    ],
    "parameters": [
        {
            "description": "The name assigned to all of the frontend objects defined in this template.",
            "displayName": "Name",
            "name": "NAME",
            "required": true,
            "value": "inframon-host"
        },
        {
            "description": "Persistent Volume Claim to be used for Icinga data persistence.",
            "displayName": "Icinga Data Claim",
            "name": "ICINGA_PVC",
            "required": true,
            "value": "icinga-data"
        },
        {
            "description": "Persistent Volume Claim to be used for IcingaWeb data persistence.",
            "displayName": "IcingaWeb Data Claim",
            "name": "ICINGAWEB_PVC",
            "required": true,
            "value": "icingaweb-data"
        },
        {
            "description": "Persistent Volume Claim to be used for MySQL data persistence.",
            "displayName": "MySQL Data Claim",
            "name": "MYSQL_PVC",
            "required": true,
            "value": "mysql-data"
        },
        {
            "description": "The exposed hostname that will route to the CakePHP service, if left blank a value will be defaulted.",
            "displayName": "Application Hostname",
            "name": "APPLICATION_DOMAIN"
        }
    ]
}
